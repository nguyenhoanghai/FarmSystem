
@{
    ViewBag.Title = "Hóa đơn";
}

<div id="jtable"></div>

<div class="modal fade" id="popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm ">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin hóa đơn</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <input type="hidden" id="id" />
                        <div class="form-group col-md-12 ">
                            <label class="control-label">Ngày mua <span class="required-class">*</span></label><br />
                            <input class="form-control" id="order-date" type="date" required="required" />
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="control-label">Mã hóa đơn <span class="required-class">*</span></label><br />
                            <input class="form-control" id="code" required="required" type="text" />
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="control-label">Nhà cung cấp <span class="required-class">*</span></label><br />
                            <div class="select-box">
                                <select class="form-control" id="customer-select" required="required"></select>
                                <i class="fa fa-refresh" re-customer></i>
                            </div>
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="control-label">Ghi chú</label>
                            <textarea class="form-control" id="note"></textarea>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="_popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm ">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin công việc</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <input type="hidden" id="id-c" />
                        <div class="form-group col-md-12 ">
                            <label class="control-label">Vật tư <span class="required-class">*</span></label>
                            <div class="select-box">
                                <select class="form-control" id="material-select" required="required"></select>
                                <i class="fa fa-refresh" re-material></i>
                            </div>
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="control-label">Số lượng <span class="required-class">*</span></label>
                            <input class="form-control" id="quantity" type="number" required="required" />
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="control-label">Đơn giá <span class="required-class">*</span></label>
                            <input class="form-control" id="price" type="number" required="required" />
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="control-label">Ghi chú</label>
                            <textarea class="form-control" id="note-c"></textarea>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/www/order-index.js"></script>